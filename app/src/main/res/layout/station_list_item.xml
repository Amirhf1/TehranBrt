<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/station_list_item_vertical_margin"
    android:layout_marginLeft="@dimen/station_list_item_horizontal_margin"
    android:layout_marginRight="@dimen/station_list_item_horizontal_margin"
    android:layout_marginTop="@dimen/station_list_item_vertical_margin"
    tools:ignore="ContentDescription,HardcodedText,RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/station_list_item_horizontal_padding"
        android:paddingStart="@dimen/station_list_item_horizontal_padding">

        <FrameLayout
            android:layout_width="@dimen/station_list_item_icons_width"
            android:layout_height="@dimen/station_list_item_icons_height"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/stationBackgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/stationDirectionImageView"
                android:layout_width="@dimen/station_list_item_arrow_width"
                android:layout_height="@dimen/station_list_item_arrow_width"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/stationNameTextView"
            style="@style/TextAppearance.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:paddingStart="10dp"
            android:text="Station Name" />

        <ImageView
            android:id="@+id/stationMetroImageView"
            android:layout_width="@dimen/station_list_item_icons_width"
            android:layout_height="@dimen/station_list_item_icons_height"
            android:layout_gravity="center" />

    </LinearLayout>

</android.support.v7.widget.CardView>